*_override.tf.json

# Ignore CLI configuration files
.terraformrc
terraform.rc

# Ignore lock files for examples and tests
examples/*/.terraform.lock.hcl
tests/.terraform.lock.hcl

# macOS
.DS_Store

# IDE
.idea/
.vscode/

# Local development
*.env
.envrc
